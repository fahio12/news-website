{{> navbar }}
<div class="container">
  <h1 class="center">Top News</h1>
  <div class="row">
    <div class="center">
      <div class="card large">
        <div class="card-image waves-effect waves-block waves-light">
          <img class="activator" src="https://s2.reutersmedia.net/resources/r/?m=02&d=20200710&t=2&i=1525303416&w=1200&r=LYNXMPEG6917I">
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4">BIG CARD<i class="fa fa-ellipsis-v right" aria-hidden="true"></i></span>
          <p><a href="#">This is a link</a></p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">BIG CARD<i class="fa fa-times right" aria-hidden="true"></i></span>
          <p>Here is some more information about this product that is only revealed once clicked on.</p>
        </div>
      </div>
    </div>
  </div>
  <h3 class="center">Other headlines</h3>
  <div class="row">
    {{#each jsonNews}}
    <div class="col s4">
      <div class="card small">
        <div class="card-image waves-effect waves-block waves-light">
          <img class="activator" src="{{urlToImage}}">
        </div>
        <div class="card-content">
          <i class="fa fa-ellipsis-v right" aria-hidden="true"></i>

          <span class="card-title activator grey-text text-darken-4">{{ title }}</span>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">{{ title }}<i class="fa fa-times right" aria-hidden="true"></i></span>
          <p>{{ content }}</p>
        </div>
      </div>
    </div>
    {{/each}}
